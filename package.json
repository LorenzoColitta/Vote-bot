{
  "name": "vote-bot",
  "version": "1.0.0",
  "description": "A Discord voting bot supporting FPTP, IRV, STV, Approval, Two-Round, weighted-role voting, propositions and timed anonymous polls.",
  "main": "dist/index.js",
  "type": "commonjs",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "check": "tsc --noEmit",
    "postinstall": "npm run build"
  },
  "author": "LorenzoColitta",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.11.0",
    "dotenv": "^16.0.0",
    "pg": "^8.11.0",
    "uuid": "^9.0.0"
  },
  "optionalDependencies": {
    "better-sqlite3": "^8.1.0"
  },
  "devDependencies": {
    "typescript": "^5.1.6",
    "ts-node-dev": "^2.0.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.6.6",
    "@types/uuid": "^9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LorenzoColitta/Vote-bot.git"
  },
  "private": true
}